<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="3dp"
    android:id="@+id/listCard">

    <RelativeLayout
        android:id="@+id/productLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sky_blue">


            <TextView
                android:id="@+id/txtUrun"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Ürün"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:textSize="20dp"
                android:background="@drawable/my_border"></TextView>

            <TextView
                android:id="@+id/txtGlisemik"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtUrun"
                android:text="Glisemik"
                android:layout_marginLeft="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/my_border"></TextView>

            <TextView
                android:id="@+id/txtKarbon"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtGlisemik"
                android:text="Karbonhidrat"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textSize="20dp"
                android:background="@drawable/my_border"></TextView>

            <TextView
                android:id="@+id/txtKalori"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtKarbon"
                android:text="Kalori"
                android:layout_marginLeft="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/my_border"></TextView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>