<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/upUAdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint=" Ürün Adı.. ">
    </EditText>

    <EditText
        android:id="@+id/upUGlisemik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:hint="Glisemik İndeksi.."
        android:layout_below="@id/upUAdi"
        android:inputType="number"
        android:layout_marginRight="15dp">
    </EditText>

    <EditText
        android:id="@+id/upUKhidrat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Karbonhidrat Miktarı(100g için)"
        android:inputType="numberDecimal"
        android:layout_below="@id/upUGlisemik">

    </EditText>

    <EditText
        android:id="@+id/upUKalori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Kalori Miktarı(100g için)"
        android:inputType="numberDecimal"
        android:layout_below="@id/upUKhidrat">
    </EditText>

    <Spinner
        android:id="@+id/upSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upUKalori"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp">
    </Spinner>

</RelativeLayout>